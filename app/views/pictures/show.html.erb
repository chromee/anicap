<h1 class="center">
  <strong>Name:</strong>
  <%= @picture.name %>
</h1><br>

<h3 class="center">
  <% @picture.tag_list.each do |tag| %>
    <span class="label label-primary"><%= tag %></span>
  <% end %>
</h3><br>

<p class="center"><%= link_to image_tag(@picture.photo.url(:large)) , @picture.photo.url(:original) %></p>

<h3 class="center">
  <%= link_to 'Edit', edit_picture_path(@picture) %> |
  <%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', pictures_path %>
</h3>

