<h1 class="title">キャプコレ</h1>

<%= paginate(@pictures) %>

<table cellpadding="5px" cellspacing="30px" align="center" class="center">
  <tbody>
    <tr>
    <% @pictures.each_with_index do |picture, i| %>
      <td>
        <%= link_to image_tag(picture.photo.url(:medium)), picture%>
        <p><%= link_to picture.name, picture %></p>
      </td>
    <% if (i+1) % 3 == 0  %>
      </tr>
      <tr>
    <% end %>
    <% end %>
    </tr>
  </tbody>
</table>

