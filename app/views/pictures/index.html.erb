<h1 class="title">キャプコレ</h1>

<div class="total_count">
  検索結果: <%= @pictures.total_count %> 件
</div>

<div style="margin-left: 100px;">
  <%= paginate(@pictures) %>
</div>

<table cellpadding="5px" cellspacing="30px" align="center" class="center">
  <tbody>
    <tr>
    <% @pictures.each_with_index do |picture, i| %>
      <td>
        <%= link_to image_tag(picture.photo.url(:medium)), picture_path(picture) %>
        <p><%= link_to picture.name, picture %></p>
      </td>
      <td>　</td>
    <% if (i+1) % 3 == 0  %>
      </tr>
      <tr>
    <% end %>
    <% end %>
    </tr>
  </tbody>
</table>

<div style="margin-left: 100px;">
  <%= paginate(@pictures) %>
</div>