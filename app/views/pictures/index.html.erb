<p id="notice"><%= notice %></p>

<h1>キャプコレ</h1>

<div>
  <table cellpadding="5px" cellspacing="30px">
    <tbody>
    <% @pictures.each_with_index do |picture, i| %>
      <% if i == 0 %>
        <tr>
      <% end %>
        <td align="center">
          <%= link_to image_tag(picture.photo.url(:medium)) , picture%>
          <p><%= picture.name %></p>
        </td>
      <% if (i+1) % 3 == 0  %>
        </tr>
        <tr>
      <% end %>
    <% end %>
    </tr>
    </tbody>
  </table>
</div>
  



